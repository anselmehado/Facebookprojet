
<div class="post_content">
  <strong>Content</strong>
  <%= @post.content %>
</div>

<div>
  <strong>Image:</strong>
  <%= image_tag @post.avatar.url, style:'width:400px;height:300px' %>
</div>

<% unless @post.user_id == current_user.id %>
<% if @favorite.present? %>1
  <%= link_to 'Remove favorite', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
<% else %>
  <%= link_to 'Favorite', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
<% end %>
<% end %>

<%= button_to 'Back to posts', posts_path %>
